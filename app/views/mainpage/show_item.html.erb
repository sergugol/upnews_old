<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!-- ================== ITEMS_BAR =========================== -->

<% content_for :items_bar do %>
	<section class="article_entry">   
		<!--div class="article_info"-->
	    	<div class = "ntime" style = "display: inline; font-size: 14px;">
				<% ndate = @article.updated_at.getlocal %>
				<p style = "display: inline; color:#933; font-weight: bold;"><%= ndate.strftime("%d-%b-%Y ..... %H:%M") + " ....." %></p>
				<p style = "display: inline; font-weight: bold;"><%= @article.author + ". " + @article.edition + " ..... " %></p>
				<%= @article.rubric.mb_chars.upcase.to_s + " (" + @article.genre + ")" %>
			</div>
	    	<h1> <%= @article.title %></h1>
	    	<% if @article.image? %>
	    	<div class = "left_image" style = "margin-right:20px;">
				<%= image_tag(@article.image.url, size: "300x200", float: "left") %>
			</div>		
			<% end %>
			<%# sanitize(@article.content) %> 
			<%= simple_format(@article.content) %> 
			<!--/div --> <!-- article_info -->
			<p style = "font-size: 16px; font-weight: bold;">
				<%= original_url %>
			</p>
			<!-- ========================= FB-like-button script ======= -->
			<div id="fb-root"></div>
			<script>
			(function(d, s, id) {
			  var js, fjs = d.getElementsByTagName(s)[0];
			  if (d.getElementById(id)) return;
			  js = d.createElement(s); js.id = id;
			  js.src = 'https://connect.facebook.net/uk_UA/sdk.js#xfbml=1&version=v3.2';
			  fjs.parentNode.insertBefore(js, fjs);
			  }(document, 'script', 'facebook-jssdk'));
			</script>
			<!-- ======================================================= -->
			<div class="fb-like" data-href="<%= original_url %>" data-width="40" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"> 
			</div>
			
	</section> 
<% end %>	


