<!-- Global site tag END ==================================================  -->
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
  <link rel="logo" href="images/favicon.ico" type="image/x-icon">
</head>

<!-- ограничение распространения правил для контроллера только на те страницы, которые связаны этим котроллером  --> 
<body class= '<%= controller.controller_name %>' onload="startTime()">
	<% if notice %>
		<p id="notice"><%= notice %></p>
		<p id="alert"><%= alert %></p>
	<% end %>

	<div id="outer">
		<%= render partial:  'shared/header' %>
		
		<div id="main">
			<section id="news_bar">
				  <%= yield :news_bar %>
			</section>	
			
			<!-- div id="top_bar" -->
				   <%= yield :top_bar %> 
			<!-- /div -->

			<section id="pdf_bar">
				   <%= yield :pdf_bar %> 
			</section>

			<section id="articles_bar">
				   <%= yield :articles_bar %> 
			</section>

			<section id="righ_bar">
					<%=  yield :right_bar %>
			</section> 

			<section id="left_bar">
					<%=  yield :left_bar %>
			</section> 

		</div> <!-- end .main --> 

		<%= render partial:  'shared/footer' %>

	</div> <!--end .outer-->
</body>
</html>
